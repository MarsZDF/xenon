#!/bin/bash
# Git pre-commit hook for Xenon
# Runs all CI checks before allowing commit

echo "üîç Running pre-commit checks..."
echo ""

# Run all checks
if ! make check; then
    echo ""
    echo "‚ùå Pre-commit checks failed!"
    echo ""
    echo "To fix issues automatically:"
    echo "  make fix"
    echo ""
    echo "To skip this check (not recommended):"
    echo "  git commit --no-verify"
    echo ""
    exit 1
fi

echo ""
echo "‚úÖ Pre-commit checks passed! Proceeding with commit..."
exit 0
